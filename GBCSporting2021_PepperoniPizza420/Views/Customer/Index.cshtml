@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customer Manager";
}
<div class="container-fluid my-5">
    <div class="align-bottom">
        <div class="progress bg-white">
            <div class="progress-bar progress-bar bg-dark" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <div class="container-fluid bg-light rounded p-4">
        <h1>Customer Manager</h1>
        <table class="table table-hover mt-3">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Postal Code</th>
                    <th scope="col">Country</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Customer customer in Model)
                {
                    <tr>
                        <td>@customer.FirstName @customer.LastName</td>
                        <td>@customer.Address</td>
                        <td>@customer.City</td>
                        <td>@customer.State</td>
                        <td>@customer.PostalCode</td>
                        <td>@customer.Country.Name</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-outline-success">Edit</a></td>
                        <td><a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Customer" asp-action="Add" class="btn btn-primary">Add Customer</a>
    </div>

    <div class="align-bottom">
        <div class="progress bg-white">
            <div class="progress-bar progress-bar bg-dark" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
</div>