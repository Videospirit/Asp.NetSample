@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customer Manager";
}

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Customer customer in Model)
        {
            <tr>
                <td>@customer.FirstName @customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.City</td>
                <td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId">Edit</a></td>
                <td><a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Customer" asp-action="Add">Add Customer</a>