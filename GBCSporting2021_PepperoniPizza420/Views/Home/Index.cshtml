@{
    ViewBag.Title = "Home";
}

<div class="card-img text-white">
    <img src="~/img/header.jpg" class="card-img" alt="header">
</div>

<div class="align-bottom">
    <div class="progress bg-white">
        <div class="progress-bar progress-bar bg-white" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>

<div class="container my-3">
    <div class="row">
        <div class="col-sm-6">
            <div class="card box-shadow">
                <div class="card-body">
                    <h5 class="card-title">Registration</h5>
                    <p class="card-text">Register with us now!</p>
                    <a asp-controller="Registration" asp-action="Index" class="btn btn-primary">Visit Registration</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card box-shadow">
                <div class="card-body">
                    <h5 class="card-title">About Us</h5>
                    <p class="card-text">Come see what we are all about!</p>
                    <a asp-controller="About" asp-action="Index" class="btn btn-primary">Visit About</a>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="container-fluid p-5 my-1">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="d-flex justify-content-center">
                        <img src="~/img/ham-carousel.jpg" class="d-block w-75" alt="ham">
                    </div>
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Oven Roasted Ham</h5>
                        <p>Premium Over Roasted Ham delivered mouthwatering just for you.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="d-flex justify-content-center">
                        <img src="~/img/pep-carousel.jpg" class="d-block w-75" alt="pepperoni">
                    </div>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Pepperoni</h5>
                            <p>Fresh made Pepperoni cut perfectly for toppings or for your home.</p>
                        </div>
                    </div>
                <div class="carousel-item">
                    <div class="d-flex justify-content-center">
                        <img src="~/img/pizza-carousel.jpg" class="d-block w-75" alt="pizza">
                    </div>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Wood Oven Pizza</h5>
                            <p>Our Wood Oven Pizza is the best Pizza in the online world, We get the Pizza to you by drone delivery.</p>
                        </div>
                    </div>
                </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container">
        <div class="row featurette d-flex align-items-center">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading">Oh yeah, it’s that good. <span class="text-muted">See for yourself.</span></h2>
                <p class="lead">A Pizza was Delivered in Space</p>
                <p class="lead">In 2001, the Russian Space Agency was paid more than a million bucks to deliver a six-inch pizza to the International Space Station. Russian cosmonaut, Yuri Usachov had the honor of being the first person to receive a pizza delivery while in orbit.</p>
            </div>
            <div class="col-md-5 order-md-1">
                <img src="~/img/pizza-space.jpg" height="400" width="400" alt="Pizza In Space" />
            </div>
        </div>
    </div>

<div class="container bg-dark text-light rounded box-shadow p-3 my-5">
        <h2>Admin</h2>
        <div class="list-group">
            <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action">Manage Products</a>
            <a asp-controller="Technician" asp-action="Index" class="list-group-item list-group-item-action">Manage Technicians</a>
            <a asp-controller="Customer" asp-action="Index" class="list-group-item list-group-item-action">Manage Customers</a>
            <a asp-controller="Incident" asp-action="Index" class="list-group-item list-group-item-action">Manage Incidents</a>
            <a asp-controller="Registration" asp-action="Index" class="list-group-item list-group-item-action disabled">Manage Registrations</a>
        </div>
    

        <div class="mt-3">
            <h2>Technicians</h2>
            <div class="list-group">
                <a asp-controller="Incident" asp-action="Add" class="list-group-item list-group-item-action">Add Incident</a>
            </div>
        </div>
    </div>

<br />

<nav class="navbar navbar-expand-lg navbar-light bg-white">
    <div class="container"></div>
</nav>