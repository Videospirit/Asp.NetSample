@model Incident
@{
    string title = "Incident Details";
    ViewBag.Title = title;
}

<div class="d-flex align-items-center justify-content-center my-xl-5">
    <div class="container bg-light rounded my-xl-5 p-4 box-shadow">
        <div class="my-5">
            <h1>@title</h1>
            <table class="table table-bordered table-light my-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Customer Name</th>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Technician Name</th>
                        <th>Date Opened</th>
                        <th>Date Closed</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Customer.FirstName @Model.Customer.LastName</td>
                        <td>@Model.Product.Name</td>
                        <td>@Model.Description</td>
                        <td>@Model.Technician.Name</td>
                        <td>@Model.DateOpened</td>
                        <td>@Model.DateClosed</td>
                    </tr>
                </tbody>
            </table>
            <a asp-controller="Incident" asp-action="Index" class="btn btn-primary">Back to Incident Manager</a>
        </div>
    </div>
</div>