@model Product
@{
    string title = ViewBag.Action + " Product";
    ViewBag.Title = title;
}

<div class="container my-5">
    <form class="bg-light rounded p-4 box-shadow" asp-action="Edit" method="post">
        <h2>@title</h2>
        <div asp-validation-summary="All"></div>
        <div class="form-group font-weight-bold">
            <label asp-for="Code">Enter Code</label>
            <input asp-for="Code" class="form-control" placeholder="Please Enter a Product Code" />
        </div>
        <div class="form-group font-weight-bold">
            <label asp-for="Name">Enter Name</label>
            <input asp-for="Name" class="form-control" placeholder="Please Enter a Product Name" />
        </div>
        <div class="form-group font-weight-bold">
            <label asp-for="Price">Enter Price</label>
            <input asp-for="Price" class="form-control" placeholder="Please Enter a Price" />
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate" class="font-weight-bold">Release Date</label>
            <input asp-for="ReleaseDate" class="form-control" />
            <p class="form-text">Current Date: @DateTime.Now</p>
        </div>
        <input type="hidden" asp-for="ProductId" class="form-control" />

        <button type="submit" class="btn btn-success">@ViewBag.Action</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-danger">Cancel</a>
    </form>
</div>