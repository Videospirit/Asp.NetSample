@model List<Product>
@{
    ViewBag.Title = "Products";
}

<h1>List of Products</h1>
<table>
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Price</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Code</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.ReleaseDate </td>
                <td>
                    <a asp-controller="Product" asp-action="Edit"
                       asp-route-id="@product.ProductId">
                        Edit

                    </a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Delete"
                       asp-route-id="@product.ProductId">
                        Delete

                    </a>
                </td>
            </tr>
            <tr>

                <td>
                    <a asp-controller="Product" asp-action="Add"
                       asp-route-id="@product.ProductId">
                    </a>
                </td>
            </tr>

        }
    </tbody>

</table>
<a asp-controller="Product" asp-action="Add">Add</a>