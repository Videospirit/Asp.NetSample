@model Technician
@{
    string title = ViewBag.Action + " Technician";
    ViewBag.Title = title;
}

<div class="container my-5">
    <form asp-action="Edit" method="post" class="bg-dark text-light box-shadow rounded font-weight-bold p-4 my-3">
    <h1>@title</h1>
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="TechnicianId">Technician</label>
            <input asp-for="Name" class="form-control" placeholder="Please Enter a Name">
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Please Enter a Email">
        </div>

        <div class="form-group">
            <label asp-for="Phone">Phone Number</label>
            <input asp-for="Phone" class="form-control" placeholder="Please Enter a Phone Number">
        </div>

        <input type="hidden" asp-for="TechnicianId" />

        <button type="submit" class="btn btn-success">@ViewBag.Action</button>
        <a asp-controller="Technician" asp-action="Index" class="btn btn-danger">Cancel</a>
    </form>
</div>